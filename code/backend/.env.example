# Environment variables for Optionix backend
# Copy this file to .env and update with your actual values

# Application settings
DEBUG=false
SECRET_KEY=your-super-secret-key-change-this-in-production
APP_NAME=Optionix API
APP_VERSION=2.0.0

# Database configuration
DATABASE_URL=postgresql://username:password@localhost:5432/optionix
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Blockchain configuration
ETHEREUM_PROVIDER_URL=https://mainnet.infura.io/v3/your-project-id
ETHEREUM_NETWORK_ID=1
FUTURES_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# ML Model configuration
MODEL_PATH=/app/models/volatility_model.h5
MODEL_VERSION=1.0.0

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS origins (comma-separated)
CORS_ORIGINS=*

# Financial limits
MAX_POSITION_SIZE=1000000.0
MIN_POSITION_SIZE=100.0
LIQUIDATION_THRESHOLD=0.8

# JWT settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

