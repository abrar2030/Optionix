# Terraform S3 Backend Configuration Example
# Copy this to backend.hcl and update with actual values
# Initialize with: terraform init -backend-config=backend.hcl

bucket         = "optionix-terraform-state-REPLACEME"
key            = "optionix/terraform.tfstate"
region         = "us-west-2"
encrypt        = true
dynamodb_table = "optionix-terraform-locks"
kms_key_id     = "arn:aws:kms:us-west-2:ACCOUNT_ID:key/REPLACEME"

skip_credentials_validation = false
skip_metadata_api_check     = false
skip_region_validation      = false
