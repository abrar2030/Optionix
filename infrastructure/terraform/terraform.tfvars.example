# Optionix Terraform Variables Example
# Copy this file to terraform.tfvars and fill in with actual values
# NEVER commit terraform.tfvars with real credentials

# AWS Configuration
aws_region = "us-west-2"

# Environment Configuration
environment = "dev"  # Options: dev, staging, prod
app_name    = "optionix"
owner       = "optionix-team"
cost_center = "engineering"
project_name = "optionix"

# Network Configuration
vpc_cidr             = "10.0.0.0/16"
allowed_cidr_blocks  = ["10.0.0.0/8"]  # Restrict to your corporate network

# EKS Configuration
eks_cluster_version           = "1.28"
node_group_desired_capacity   = 2
node_group_min_capacity       = 1
node_group_max_capacity       = 4
node_group_instance_types     = ["t3.medium"]

# Database Configuration
db_name            = "optionix"
db_username        = "optionix_admin"
# db_password is generated automatically via random_password
db_instance_class  = "db.t3.micro"
db_allocated_storage     = 20
db_max_allocated_storage = 100

# Terraform State Backend Configuration
# These should be created manually first:
# aws s3 mb s3://optionix-terraform-state-ACCOUNTID
# aws dynamodb create-table --table-name optionix-terraform-locks \
#   --attribute-definitions AttributeName=LockID,AttributeType=S \
#   --key-schema AttributeName=LockID,KeyType=HASH \
#   --billing-mode PAY_PER_REQUEST

terraform_state_bucket  = "optionix-terraform-state-REPLACEME"
terraform_lock_table    = "optionix-terraform-locks"
terraform_state_kms_key = "arn:aws:kms:REGION:ACCOUNT:key/REPLACEME"
