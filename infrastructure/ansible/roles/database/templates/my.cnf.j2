# MySQL Security Configuration for Financial Applications
# Generated by Ansible - DO NOT EDIT MANUALLY

[mysqld]
# Basic Settings
user = mysql
pid-file = /var/run/mysqld/mysqld.pid
socket = /var/run/mysqld/mysqld.sock
port = 3306
basedir = /usr
datadir = /var/lib/mysql
tmpdir = /tmp
lc-messages-dir = /usr/share/mysql

# Security Settings
# Disable remote root login
skip-networking = 0
bind-address = {{ mysql_bind_address | default('127.0.0.1') }}

# SSL Configuration
ssl-ca = /etc/mysql/ssl/ca-cert.pem
ssl-cert = /etc/mysql/ssl/server-cert.pem
ssl-key = /etc/mysql/ssl/server-key.pem
require_secure_transport = ON

# Authentication
default_authentication_plugin = mysql_native_password
validate_password.policy = STRONG
validate_password.length = 12
validate_password.mixed_case_count = 2
validate_password.number_count = 2
validate_password.special_char_count = 2

# Connection Security
max_connections = {{ mysql_max_connections | default('100') }}
max_user_connections = {{ mysql_max_user_connections | default('50') }}
max_connect_errors = 10
connect_timeout = 10
wait_timeout = 600
interactive_timeout = 600

# Logging and Auditing
log_error = /var/log/mysql/error.log
log_warnings = 2
log_queries_not_using_indexes = 1
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2

# Binary Logging for Audit Trail
log_bin = /var/log/mysql/mysql-bin.log
binlog_format = ROW
binlog_row_image = FULL
expire_logs_days = 30
max_binlog_size = 100M
sync_binlog = 1

# General Query Log (Enable for detailed auditing)
general_log = {{ mysql_general_log | default('0') }}
general_log_file = /var/log/mysql/general.log

# Performance Schema for Monitoring
performance_schema = ON
performance_schema_consumer_events_statements_current = ON
performance_schema_consumer_events_statements_history = ON
performance_schema_consumer_events_statements_history_long = ON

# InnoDB Settings for ACID Compliance
default_storage_engine = InnoDB
innodb_file_per_table = 1
innodb_flush_log_at_trx_commit = 1
innodb_log_buffer_size = 16M
innodb_buffer_pool_size = {{ mysql_innodb_buffer_pool_size | default('128M') }}
innodb_log_file_size = 64M
innodb_thread_concurrency = 0
innodb_flush_method = O_DIRECT

# Security Hardening
local_infile = 0
skip_show_database = 1
safe_user_create = 1
secure_auth = 1
skip_symbolic_links = 1

# Disable dangerous functions
sql_mode = "STRICT_TRANS_TABLES,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION"

# Character Set
character_set_server = utf8mb4
collation_server = utf8mb4_unicode_ci

# Timeout Settings
net_read_timeout = 30
net_write_timeout = 60
key_buffer_size = 32M
max_allowed_packet = 16M
thread_stack = 256K
thread_cache_size = 8
query_cache_size = 0
query_cache_type = 0

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4
ssl-ca = /etc/mysql/ssl/ca-cert.pem
ssl-cert = /etc/mysql/ssl/client-cert.pem
ssl-key = /etc/mysql/ssl/client-key.pem
