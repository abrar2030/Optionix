# Ansible Vault Example for Secrets
# 
# Create encrypted vault file:
#   ansible-vault create group_vars/vault.yml
# 
# Edit encrypted vault file:
#   ansible-vault edit group_vars/vault.yml
#
# This file shows the structure - DO NOT use these example passwords!

---
# Database credentials
vault_mysql_root_password: "CHANGE_ME_STRONG_PASSWORD_32_CHARS"
vault_optionix_db_password: "CHANGE_ME_STRONG_PASSWORD_32_CHARS"
vault_backup_db_password: "CHANGE_ME_STRONG_PASSWORD_32_CHARS"
vault_monitor_db_password: "CHANGE_ME_STRONG_PASSWORD_32_CHARS"

# Application secrets
vault_jwt_secret: "CHANGE_ME_JWT_SECRET_KEY_64_CHARS"
vault_encryption_key: "CHANGE_ME_ENCRYPTION_KEY_32_BYTES"
vault_api_key: "CHANGE_ME_API_KEY"

# SSH keys (if managed via Ansible)
vault_ssh_private_key: |
  -----BEGIN OPENSSH PRIVATE KEY-----
  YOUR_PRIVATE_KEY_HERE
  -----END OPENSSH PRIVATE KEY-----
