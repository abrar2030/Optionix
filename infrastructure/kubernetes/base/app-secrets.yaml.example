# Kubernetes Secrets Example
# Copy this to app-secrets.yaml and update with base64-encoded values
# Encode with: echo -n "your-secret-value" | base64
# NEVER commit app-secrets.yaml to version control

apiVersion: v1
kind: Secret
metadata:
    name: optionix-secrets
    namespace: default
type: Opaque
data:
    # Base64 encoded values - replace with actual encoded secrets
    database-url: bXlzcWw6Ly91c2VyOnBhc3NAaG9zdDozMzA2L2RiCg==  # mysql://user:pass@host:3306/db
    jwt-secret: Y2hhbmdlLW1lLXRvLWEtc3Ryb25nLXJhbmRvbS1zZWNyZXQ=  # change-me-to-a-strong-random-secret
    mysql-root-password: Y2hhbmdlLW1lLXJvb3QtcGFzc3dvcmQ=  # change-me-root-password
    mysql-password: Y2hhbmdlLW1lLXVzZXItcGFzc3dvcmQ=  # change-me-user-password
    encryption-key: Y2hhbmdlLW1lLWVuY3J5cHRpb24ta2V5LTMyLWJ5dGVz  # change-me-encryption-key-32-bytes
    api-key: Y2hhbmdlLW1lLWFwaS1rZXk=  # change-me-api-key
